generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Campeonato {
  id          String   @id @default(uuid())
  nome        String
  data_inicio DateTime
  data_fim    DateTime
  created_at  DateTime @default(now())
  Time        Time?    @relation(fields: [timeId], references: [id])
  timeId      Int?

  times CampeonatoTime[] // Relacionamento "muitos para muitos"

  @@map("campeonatos")
}

model Time {
  id          Int          @id @default(autoincrement())
  nome        String
  fundacao    DateTime
  //  jogadores      Jogador[]  //Relacionamento "um para muitos"
  campeonatos Campeonato[] // Relacionamento "muitos para muitos"

  campeonato CampeonatoTime[] // Relacionamento "muitos para muitos"
}

//tabela de relacionamento time e campeonato
model CampeonatoTime {
  campeonatoId String
  campeonato   Campeonato @relation(fields: [campeonatoId], references: [id])

  timeId       Int
  time         Time       @relation(fields: [timeId], references: [id])

  @@id([campeonatoId, timeId]) // Chave composta

  @@map("campeonatos_times") // Nome da tabela

}
